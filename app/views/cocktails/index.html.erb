<div class="index">
  <div class="banner d-flex align-items-center justify-content-center mb-4" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1536935338788-846bb9981813?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1286&q=80);">
      <h1 class= "">Here are all of your cocktails</h1>

  </div>
    <div class="container">

          <div class="grid">
            <% @cocktails.each do |cocktail| %>
              <div class="cocktail-card p-4 mb-2 d-flex bg-white justify-content-between align-items-center">
                  <%= cl_image_tag cocktail.picture.url(:small) %>
                <div class= "text-center align-items">
                <%= cocktail.name %>
                <br>
                <%= link_to "Show more", cocktail_path(cocktail)%>
                <br>
                <%= link_to "", cocktail_path(cocktail), method: :delete, class: "far fa-trash-alt p-2" %>
                </div>
              </div>
            <% end %>
          </div>
          <div class="text-center"><%= link_to "Add a cocktail", new_cocktail_path, class: "btn  btn-secondary mt-3 text-center btn-block" %></div>

    </div>
</div>
