<div class="container">
  <div class="banner">
    <%= image_tag @cocktail.picture.url(:big) %>
  </div>
  <h1 class="white">More about <%= @cocktail.name %></h1>
  <h3>Ingredients : </h3>
  <ul>

            <% @cocktail.doses.each do |dose| %>
            <li>
              <%= dose.description %>
              <%= dose.ingredient.name %>
              <%= link_to "Delete a dose", dose_path(dose), method: :delete, data: {confirm: "are you super duper surrre?"} %>
            <% end  %>
            </li>
  </ul>
  <%= link_to "Add a dose", new_cocktail_dose_path(@cocktail) %>

</div>
